#!/bin/bash -e

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )

if [[ -z "$SNAP_DATA" ]]; then
  echo "SNAP_DATA environment variable must be set"
  exit 1
fi

#export LD_LIBRARY_PATH=${DIR}/php/lib:${DIR}/postgresql/lib
export NEXTCLOUD_CONFIG_DIR=${SNAP_DATA}/nextcloud/config
export LC_ALL=C
if [[ "$(whoami)" == "nextcloud" ]]; then
    ${DIR}/php/lib/ld.so --library-path ${DIR}/php/lib:${DIR}/php/lib/private ${DIR}/php/bin/php -c ${SNAP_DATA}/config/php.ini "$@"
else
    sudo -H -E -u nextcloud ${DIR}/php/lib/ld.so --library-path ${DIR}/php/lib:${DIR}/php/lib/private ${DIR}/php/bin/php -c ${SNAP_DATA}/config/php.ini "$@"
fi

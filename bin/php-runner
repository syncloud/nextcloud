#!/bin/bash -e

DIR=$( cd "$( dirname "${BASH_SOURCE[0]}" )" && cd .. && pwd )

if [[ -z "$SNAP_COMMON" ]]; then
  echo "SNAP_COMMON environment variable must be set"
  exit 1
fi

export LD_LIBRARY_PATH=${DIR}/php/lib:${DIR}/postgresql/lib
export NEXTCLOUD_CONFIG_DIR=${SNAP_COMMON}/nextcloud/config

if [[ "$(whoami)" == "nextcloud" ]]; then
    ${DIR}/php/bin/php -c {{ config_dir }}/php.ini "$@"
else
    sudo -H -E -u nextcloud LD_LIBRARY_PATH=$LD_LIBRARY_PATH ${DIR}/php/bin/php -c {{ config_dir }}/php.ini "$@"
fi
